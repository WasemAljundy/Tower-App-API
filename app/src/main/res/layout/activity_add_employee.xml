<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bk_blue"
    tools:context=".Views.AddEmployeeActivity">

    <TextView
        android:id="@+id/tv_add_employee_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Employee"
        android:textColor="@color/black"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:textSize="@dimen/_30sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.100000024" />

    <ImageView
        android:id="@+id/img_employee"
        android:layout_width="@dimen/_75sdp"
        android:layout_height="@dimen/_75sdp"
        android:layout_gravity="center"
        android:src="@drawable/ic_baseline_add_a_photo_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_add_employee_welcome"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/tv_add_employee_welcome"
        app:layout_constraintTop_toBottomOf="@+id/tv_add_employee_welcome"
        app:layout_constraintVertical_bias="0.061" />

    <TextView
        android:id="@+id/tv_employee_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Employee Name"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/img_employee"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/img_employee"
        app:layout_constraintTop_toBottomOf="@+id/img_employee"
        app:layout_constraintVertical_bias="0.05" />

    <EditText
        android:id="@+id/et_employee_fullname"
        android:layout_width="@dimen/_270sdp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:hint="Employee Name"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/tv_employee_name_txt"
        app:layout_constraintStart_toStartOf="@+id/tv_employee_name_txt"
        app:layout_constraintTop_toBottomOf="@+id/tv_employee_name_txt" />

    <TextView
        android:id="@+id/tv_employee_mobile_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Mobile Number"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/et_employee_fullname"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/et_employee_fullname"
        app:layout_constraintTop_toBottomOf="@+id/et_employee_fullname"
        app:layout_constraintVertical_bias="0.081" />

    <EditText
        android:id="@+id/et_employee_mobile_number"
        android:layout_width="@dimen/_270sdp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:hint="Mobile Number"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/tv_employee_mobile_txt"
        app:layout_constraintStart_toStartOf="@+id/tv_employee_mobile_txt"
        app:layout_constraintTop_toBottomOf="@+id/tv_employee_mobile_txt" />

    <TextView
        android:id="@+id/tv_employee_national_id_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="National id"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/et_employee_mobile_number"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/et_employee_mobile_number"
        app:layout_constraintTop_toBottomOf="@+id/et_employee_mobile_number"
        app:layout_constraintVertical_bias="0.11" />

    <EditText
        android:id="@+id/et_employee_national_id_number"
        android:layout_width="@dimen/_270sdp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:hint="National id"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/tv_employee_mobile_txt"
        app:layout_constraintStart_toStartOf="@+id/tv_employee_mobile_txt"
        app:layout_constraintTop_toBottomOf="@+id/tv_employee_national_id_txt" />

    <Button
        android:id="@+id/btn_add_employee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Employee"
        android:background="@drawable/btn_shape"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/et_employee_national_id_number"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/et_employee_national_id_number"
        app:layout_constraintTop_toBottomOf="@+id/et_employee_national_id_number"
        app:layout_constraintVertical_bias="0.34" />

    <Button
        android:id="@+id/btn_update_employee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="Update Employee"
        android:background="@drawable/btn_shape"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/et_employee_national_id_number"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/et_employee_national_id_number"
        app:layout_constraintTop_toBottomOf="@+id/et_employee_national_id_number"
        app:layout_constraintVertical_bias="0.34" />

</androidx.constraintlayout.widget.ConstraintLayout>