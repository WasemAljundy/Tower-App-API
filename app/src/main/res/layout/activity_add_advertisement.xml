<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bk_blue"
    tools:context=".Views.AddAdvertisementActivity">

    <TextView
        android:id="@+id/tv_add_Ads_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Advertisement"
        android:textColor="@color/black"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:textSize="@dimen/_30sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.100000024" />

    <ImageView
        android:id="@+id/img_advertisement"
        android:layout_width="@dimen/_300sdp"
        android:layout_height="@dimen/_150sdp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_add_Ads_welcome"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/tv_add_Ads_welcome"
        app:layout_constraintTop_toBottomOf="@+id/tv_add_Ads_welcome"
        app:layout_constraintVertical_bias="0.061" />

    <TextView
        android:id="@+id/tv_advertisement_title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Advertisement Title"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/img_advertisement"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/img_advertisement"
        app:layout_constraintTop_toBottomOf="@+id/img_advertisement"
        app:layout_constraintVertical_bias="0.05" />

    <EditText
        android:id="@+id/et_advertisement_title"
        android:layout_width="@dimen/_270sdp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:hint="Title"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/tv_advertisement_title_txt"
        app:layout_constraintStart_toStartOf="@+id/tv_advertisement_title_txt"
        app:layout_constraintTop_toBottomOf="@+id/tv_advertisement_title_txt" />

    <TextView
        android:id="@+id/tv_advertisement_info_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Advertisement info"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/et_advertisement_title"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/et_advertisement_title"
        app:layout_constraintTop_toBottomOf="@+id/et_advertisement_title"
        app:layout_constraintVertical_bias="0.081" />

    <EditText
        android:id="@+id/et_advertisement_info"
        android:layout_width="@dimen/_270sdp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:hint="info"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/et_advertisement_title"
        app:layout_constraintStart_toStartOf="@+id/et_advertisement_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_advertisement_info_txt" />

    <Button
        android:id="@+id/btn_add_advertisement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_shape"
        android:text="Add Advertisement"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/et_advertisement_info"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/et_advertisement_info"
        app:layout_constraintTop_toBottomOf="@+id/et_advertisement_info"
        app:layout_constraintVertical_bias="0.3" />

    <Button
        android:id="@+id/btn_update_advertisement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_shape"
        android:text="Update Advertisement"
        app:backgroundTint="@null"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/et_advertisement_info"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/et_advertisement_info"
        app:layout_constraintTop_toBottomOf="@+id/et_advertisement_info"
        app:layout_constraintVertical_bias="0.3" />

    <TextView
        android:id="@+id/tv_add_ads_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click here to upload an image"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_advertisement"
        app:layout_constraintEnd_toEndOf="@+id/img_advertisement"
        app:layout_constraintStart_toStartOf="@+id/img_advertisement"
        app:layout_constraintTop_toTopOf="@+id/img_advertisement"
        android:drawablePadding="@dimen/_5sdp"
        app:drawableEndCompat="@drawable/ic_baseline_add_a_photo_24" />


</androidx.constraintlayout.widget.ConstraintLayout>