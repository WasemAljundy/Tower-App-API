<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bk_blue"
    tools:context=".Views.ChangePasswordActivity">

    <TextView
        android:id="@+id/tv_welcome_password_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_100sdp"
        android:fontFamily="sans-serif-black"
        android:text="Change Password..."
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_enter_welcome_password_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your new password"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_welcome_password_reset"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_welcome_password_reset"
        app:layout_constraintTop_toBottomOf="@+id/tv_welcome_password_reset" />

    <TextView
        android:id="@+id/tv_current_password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Password"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_enter_welcome_password_reset"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_enter_welcome_password_reset"
        app:layout_constraintVertical_bias="0.103" />

    <EditText
        android:id="@+id/et_current_password"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_current_password_text"
        app:layout_constraintTop_toBottomOf="@+id/tv_current_password_text"
        app:layout_constraintVertical_bias="0.02" />

    <TextView
        android:id="@+id/tv_new_password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Password"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_current_password"
        app:layout_constraintTop_toBottomOf="@+id/et_current_password"
        app:layout_constraintVertical_bias="0.07" />

    <EditText
        android:id="@+id/et_new_password"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_current_password_text"
        app:layout_constraintTop_toBottomOf="@+id/tv_new_password_text"
        app:layout_constraintVertical_bias="0.02" />

    <TextView
        android:id="@+id/tv_new_password_confirm_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Password"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_current_password"
        app:layout_constraintTop_toBottomOf="@+id/et_new_password"
        app:layout_constraintVertical_bias="0.07" />

    <EditText
        android:id="@+id/et_new_confirm_password"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_current_password_text"
        app:layout_constraintTop_toBottomOf="@+id/tv_new_password_confirm_text"
        app:layout_constraintVertical_bias="0.02" />

    <Button
        android:id="@+id/btn_save_change_password"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_shape"
        android:text="Save Changes"
        android:textSize="16sp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/et_new_confirm_password"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/et_new_confirm_password"
        app:layout_constraintTop_toBottomOf="@+id/et_new_confirm_password"
        app:layout_constraintVertical_bias="0.2" />

</androidx.constraintlayout.widget.ConstraintLayout>